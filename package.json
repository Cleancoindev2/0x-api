    "scripts": {
        "clean": "shx rm -rf lib",
        "build": "tsc",
        "dev": "nodemon -r dotenv/config src/index.ts | pino-pretty",
        "watch": "tsc -w",
        "prettier": "prettier --write 'src/**/*.ts' --config .prettierrc",
        "start": "node -r dotenv/config lib/index.js",
        "start:service:http": "node -r dotenv/config lib/runners/http_service_runner.js",
        "start:service:ws": "node -r dotenv/config lib/runners/websocket_service_runner.js",
        "start:service:order_watcher": "node -r dotenv/config lib/runners/order_watcher_service_runner.js",
        "lint": "tslint --project . --format stylish"
    },
    "devDependencies": {
        "@0x/tslint-config": "^3.0.1",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/lodash": "^4.14.137",
        "@types/pino": "^5.8.13",
        "@types/web3": "^1.0.19",
        "@types/web3-provider-engine": "^14.0.0",
        "@types/ws": "^6.0.2",
        "nodemon": "^1.19.4",
        "pino-pretty": "^3.2.2",
        "prettier": "^1.18.2",
        "shx": "^0.3.2",
        "ts-node": "^8.4.1",
        "tslint": "^5.19.0",
        "typescript": "3.0.1"
    },
    "dependencies": {
